{
  "name": "node-express-es6-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Node.js projects with lint, transpile and test configurations.",
  "main": "src/index.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack --config ./build/webpack.api.base.babel.js",
    "clean": "./node_modules/.bin/rimraf ./dist",
    "lint": "./node_modules/.bin/eslint --color --format stylish ./src --fix",
    "prebuild": "npm run clean",
    "start": "cd ./dist && node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:prod": "ENV=production && yarn build && yarn start",
    "start:dev": "ENV=development && yarn build && yarn start"
  },
  "author": "Suvankar Kundu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suvankar-kundu/node-express-es6-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "boilerplate",
    "es6",
    "es2015",
    "babel",
    "express",
    "lint"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-import-graphql": "^2.8.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "file-loader": "^1.1.6",
    "json-loader": "^0.5.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "rimraf": "^2.6.2",
    "swagger-ui-express": "^4.0.2",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "apollo-server-express": "^2.25.1",
    "axios": "^0.18.0",
    "babel-preset-stage-2": "^6.24.1",
    "bcrypt": "^5.0.1",
    "body-parser": "1.18.2",
    "cors": "2.8.4",
    "dotenv": "^16.0.2",
    "dotenv-webpack": "^7.0.3",
    "express": "^4.17.1",
    "firebase-admin": "^11.1.0",
    "graphql": "^15.5.0",
    "import-graphql": "^1.0.1",
    "mongodb": "^3.6.9",
    "mongoose": "5.0.9",
    "morgan": "1.9.0",
    "nodemailer": "^6.7.2",
    "passport": "0.4.0",
    "passport-jwt": "3.0.1",
    "ramda": "^0.28.0",
    "winston": "2.4.0",
    "winston-daily-rotate-file": "1.7.2"
  }
}
